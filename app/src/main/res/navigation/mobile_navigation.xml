<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/moviesListFragment">

    <fragment
        android:id="@+id/moviesListFragment"
        android:name="com.shevchenkovtwo.tmdbApp.ui.fragments.NowPlayingMoviesFragment"
        android:label="fragment_movies_list"
        tools:layout="@layout/fragment_movies_list">
        <action
            android:id="@+id/action_moviesListFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.shevchenkovtwo.tmdbApp.ui.fragments.MovieDetailFragment"
        android:label="movie_detail_fragment"
        tools:layout="@layout/fragment_movie_detail" >
        <argument
            android:name="movie"
            app:argType="domain.models.Movie" />
    </fragment>

    <fragment
        android:id="@+id/ticketFragment"
        android:name="com.shevchenkovtwo.tmdbApp.ui.fragments.TicketFragment"
        android:label="Tickets"
        tools:layout="@layout/fragment_ticket" />

    <fragment
        android:id="@+id/cinemasFragment"
        android:name="com.shevchenkovtwo.tmdbApp.ui.fragments.CinemasFragment"
        android:label="Cinemas"
        tools:layout="@layout/fragment_cinemas" />

    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.shevchenkovtwo.tmdbApp.ui.fragments.FavouriteFragment"
        android:label="Favourite"
        tools:layout="@layout/fragment_favourite" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.shevchenkovtwo.tmdbApp.ui.fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

</navigation>