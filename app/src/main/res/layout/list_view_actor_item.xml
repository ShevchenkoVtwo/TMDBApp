<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_4"
    android:background="@color/app_background_color">

    <ImageView
        android:id="@+id/actor"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/actor_photo" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/actor_name"
        style="@style/Widget.MaterialComponents.TextView.SubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:text="@string/actor_name"
        app:layout_constraintEnd_toEndOf="@+id/actor"
        app:layout_constraintStart_toStartOf="@+id/actor"
        app:layout_constraintTop_toBottomOf="@+id/actor" />

</androidx.constraintlayout.widget.ConstraintLayout>