<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/app_background_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.Icon.Back">
        <item name="icon">@drawable/ic_arrow_back</item>
        <item name="iconTint">@color/medium_gray_color</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/medium_gray_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.Title">
        <item name="android:textColor">"@color/white_color"</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_dimen_40</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.SubTitle">
        <item name="android:textColor">"@color/white_color"</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_dimen_14</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.SubTitle2">
        <item name="android:textColor">"@color/medium_gray_color"</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_dimen_14</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.Text">
        <item name="android:textColor">"@color/medium_gray_color"</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">@dimen/text_dimen_14</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.TagText">
        <item name="android:textColor">"@color/light_red_color"</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">@dimen/text_dimen_14</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="StarRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/small_rating_bar</item>
        <item name="android:stepSize">1</item>
        <item name="android:isIndicator">true</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>

</resources>